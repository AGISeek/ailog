{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		/* Additional Checks */
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		/* Module Resolution Options */
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
